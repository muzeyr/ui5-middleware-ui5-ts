{
	"name": "uzi2",
	"version": "1.0.0",
	"description": "UI5 Application: uzi2",
	"author": "Muhammed Üzeyr Özcan",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "rimraf dist coverage",
		"build": "ui5 build --clean-dest",
		"build:opt": "ui5 build self-contained --clean-dest --all",
		"start": "ui5 serve --port 8080 -o index.html",
		"start-cdn": "ui5 serve --port 8080 -o index-cdn.html",
		"start:dist": "npm start -- --config ui5-dist.yaml",
		"start:dist-cdn": "npm run start-cdn -- --config ui5-dist.yaml",
		"ts-typecheck": "tsc --noEmit",
		"lint": "eslint webapp",
		"ui5lint": "ui5lint",
		"karma": "karma start",
		"karma-ci": "karma start karma-ci.conf.js",
		"karma-ci-cov": "karma start karma-ci-cov.conf.js",
		"test": "npm run lint && npm run karma-ci-cov",
		"wdi5": "wdio run ./webapp/test/e2e/wdio.conf.ts"
	},
	"devDependencies": {
		"@openui5/types": "^1.131.0",
		"@sapui5/types": "1.130.2",
		"@ui5/cli": "^4.0.8",
		"@ui5/linter": "^1.0.2",
		"@wdio/cli": "^8.40.6",
		"@wdio/local-runner": "^8.40.6",
		"@wdio/mocha-framework": "^8.40.6",
		"@wdio/spec-reporter": "^8.40.6",
		"eslint": "^9.12.0",
		"globals": "^15.11.0",
		"karma": "^6.4.4",
		"karma-chrome-launcher": "^3.2.0",
		"karma-coverage": "^2.2.1",
		"karma-ui5": "^4.0.1",
		"karma-ui5-transpile": "^3.5.0",
		"rimraf": "^6.0.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.8.1",
		"ui5-middleware-livereload": "^3.1.0",
		"ui5-middleware-servestatic": "^3.2.1",
		"ui5-middleware-ui5": "^3.2.1",
		"ui5-tooling-transpile": "^3.5.0",
		"wdio-ui5-service": "^2.0.10",
		"uzi":"file:../uzi/"
	},
	"ui5": {
		"dependencies": [
			"ui5-middleware-servestatic"
		]
	}
}
